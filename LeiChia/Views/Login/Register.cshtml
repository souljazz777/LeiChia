@model LeiChia.Models.Member

<form method="post">
    <div class="mb-3" asp-for:display name on the label>
        <label for="Phone">電話號碼</label>
        <input type="tel" id="Phone" name="Phone" class="form-control" />
        
    </div>
    <div class="mb-3" asp-for:display name on the label>
        <label for="Password">密碼</label>
        <input type="password" id="Password" name="Password" class="form-control" />
        
    </div>
    <div class="mb-3">
        <label for="Mail">信箱</label>
        <input type="email" id="Email" name="Mail" class="form-control" />
        
    </div>
    <div class="mb-3">
        <label for="Name">姓名</label>
        <input type="text" id="Name" name="Name" class="form-control" />
        
    </div>
    <button type="submit" class="btn btn-primary" style="width:150px">創建</button>
    <a onclick ="TurnToHome()" class="btn btn-secondary" style="width:150px">
        返回首頁
    </a>
</form>
